{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "ES6",                         
    "declaration": true,                     
    "declarationMap": true,                  
    "sourceMap": true,                       
    "outDir": "dist",                        
    "strict": true,                          
    "moduleResolution": "node",              
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                     
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}