{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "CommonJS",                         
    "declaration": true,                     
    "declarationMap": true,                  
    "sourceMap": true,                       
    "outDir": "dist",                        
    "strict": true,                          
    "moduleResolution": "node",              
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                     ,
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}